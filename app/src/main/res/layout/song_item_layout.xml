<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <RelativeLayout
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/song_background"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@drawable/ic_music_default" />
        <LinearLayout
            android:layout_toRightOf="@+id/song_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="17sp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alone - Alan Wlker"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="13sp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/song_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="00:58"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textSize="12sp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
        <views.SongUploaderIconView
            android:id="@+id/icon_song_upload"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_image_not_downloaded" />
    </RelativeLayout>
</android.support.v7.widget.CardView>